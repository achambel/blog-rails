<h1><%= Category.model_name.human %></h1>

<%= render 'partials/error_messages', object: @category %>

<%= form_for @category, html: { class: 'ui form' } do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <%= render 'partials/new_edit_delete_buttons', form: f, object: @category %>
<% end %>
