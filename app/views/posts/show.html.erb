<article>
  <header>
    <h3>
      <i class="book icon"></i>
      <%= @post.title %>
    </h3>
  </header>
  <section>
    <p><%= @post.content %></p>
    <p>
      <span>
        <i class="user icon"></i>
        <%= "#{t('views.defaults.author')}: #{@post.user.name} " %>
      </span>

      <span>
        <i class="calendar icon"></i>
        <%= l(@post.created_at, format: :long) %>
      </span>
    </p>
    <p>
      <%= render 'partials/show_buttons', object: @post %>
    </p>
  </section>
</article>
