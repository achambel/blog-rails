<% if @comment.errors.any? %>
  $("#comment-message")
    .html("<%= escape_javascript(render 'partials/error_messages', object: @comment) %>")
    .transition('shake')
    .fadeOut(10000);
<% else %>
  $("<%= escape_javascript(render @comment) %>")
    .prependTo("#comments")
    .transition('jiggle');

  <% total_comments = @post.comments.count %>
  $("#total").html("<%= total_comments %>");
  $("#total_comments_text").html("<%= Comment.model_name.human(count: total_comments) %>");
  $(".comment").val('');
<% end %>
