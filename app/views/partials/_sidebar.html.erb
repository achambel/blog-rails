<div class="ui vertical menu">
  <div class="item" id="top5authors">
    <div class="header"><%= t('views.defaults.top5authors') %></div>

    <div class="menu">
      <% Author.top(5).each do |k, v| %>
        <a href="<%= user_posts_path(k[1]) %>" class="item">
          <%= gravatar_image(k[2]) %>
          <%= k[0] %>
          <span class="ui teal label"><%= v %></span>
        </a>
      <% end %>
    </div>
  </div>

  <div class="item" id="top5categories">
    <div class="header"><%= t('views.defaults.top5categories') %></div>

    <div class="menu">
      <% Category.top(5).each do |k, v| %>
        <div class="column" style="margin-bottom: 5px;">
          <a href="<%= category_posts_path(k[1]) %>" class="ui blue tag label">
            <%= k[0] %>
          </a>
        </div>
      <% end %>
    </div>
  </div>
</div>
