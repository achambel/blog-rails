<%= link_to send("#{object.class.name.tableize}_path"), class: 'ui button' do %>
  <i class="arrow left icon"></i>
  <%= t('views.defaults.back') %>
<% end %>

<% if logged_in? %>
<a href=<%= send("edit_#{object.class.name.downcase}_path", object) %>
                                                        class='ui teal button'>
  <i class="edit icon"></i>
  <%= t('views.defaults.edit') %>
</a>
  <%= link_to object,
            method: :delete,
            data: {
              header: t('views.defaults.attention'),
              confirm: t('views.defaults.destroy_confirmation', target: object),
              cancel: t('views.defaults.cancel'),
              ok: t('views.defaults.yes') },
            class: 'ui negative button' do %>
    <i class="trash icon"></i>
    <%= t('views.defaults.delete') %>
  <% end %>
<% end %>
