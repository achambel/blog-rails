<div class="ui center aligned grid">
  <div class="ten wide column">
        <h2 class="ui teal header"><%= t('views.login.access') %></h2>
  <%= form_tag login_path, class: 'ui large form' do %>
      <div class="ui segment">

        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= text_field_tag :email, nil, placeholder: "#{User.human_attribute_name(:email)}" %>
          </div>
        </div>

        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= password_field_tag :password, nil, placeholder: "#{User.human_attribute_name(:password)}" %>
          </div>
        </div>
        <%= submit_tag t('views.login.login'), class: 'ui fluid large teal submit button' %>
      </div>

  <% end %>
  </div>
</div>
